<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_user_image, size: '50x50' %></td>
        <td><%= user.name %></td>
        <td>フォロー:<%= user.followers.count %>人</td>
        <td>フォロワー:<%= user.followeds.count %>人</td>
        <td>投稿数:<%= user.posts.count %></td>
        <!--ログイン中のユーザーはフォローボタンなし・リンクをmy_pageに変更-->
        <% unless user == current_user %>
          <td>
            <% if current_user.following?(user) %>
              <div>
                <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete %>
              </div>
            <% else %>
              <div>
                <%= link_to "フォローする", user_relationships_path(user.id), method: :post %>
              </div>
            <% end %>
          </td>
          <td><%= link_to 'Show', user_path(user.id) %></td>
        <% else %>
        <td></td>
        <td><%= link_to 'Show', users_my_page_path %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
