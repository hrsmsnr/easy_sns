<% if @user == current_user %>
  <div class="btn"><%= link_to "編集ボタン", edit_user_path(current_user.id) %></div>
<% end %>
<div><%= @user.name %></div>
<div><%= @user.introduction %></div>
<div><%= @user.email %></div>
<div>フォロー:<%= @user.followers.count %>人</div>
<div>フォロワー:<%= @user.followeds.count %>人</div>
<div><%= @user.posts.count %></div>

<% @posts.each do |post| %>
  <div class="flex-column border">
    <%= link_to post_path(post.id) do %>
      <div>
        <%= post.title %>
      </div>
      <div>
        <%= image_tag post.get_post_image, size: '90x90' %>
        <%= post.body %>
      </div>
    <% end %>
  </div>
<% end %>