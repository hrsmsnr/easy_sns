<div class="text-center text-success"><%= flash[:success] %></div>
<% if @user == current_user %>
  <h1>マイページ</h1>
  <div class="btn"><%= link_to "編集ボタン", edit_user_path(current_user.id) %></div>
<% else %>
  <h1><%= @user.name %></h1>
<% end %>
<div><%= image_tag @user.get_user_image, size: '100x100' %></div>
<div><%= @user.introduction %></div>
<% if @user == current_user %>
  <div><%= @user.email %></div>
<% end %>
<div>フォロー:<%= @user.followers.count %>人</div>
<div>フォロワー:<%= @user.followeds.count %>人</div>
<div>投稿数:<%= @user.posts.count %></div>

<% @posts.each do |post| %>
  <div class="flex-column border">
    <%= link_to post_path(post.id) do %>
      <div>
        <%= post.title %>
      </div>
      <div>
        <%= image_tag post.get_post_image, size: '90x90' %>
        <%= post.body %>
      </div>
    <% end %>
  </div>
<% end %>