<% post.comments.each do |comment| %>
	<tr>
		<td>
		<%= link_to user_path(comment.user) do %>
			<%= image_tag comment.user.get_user_image, size: "50x50" %><br>
			<%= comment.user.name %>
		<% end %>
		</td>

		<td>
		<%= comment.body %>
		</td>
		<td>
		<% if comment.user == current_user %>
			<%= link_to "Destroy", post_comment_path(comment.post,comment), method: :delete, remote: true, class: "btn" %>
		<% end %>
		</td>
	<tr>
<% end %>