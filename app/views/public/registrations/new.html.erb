<h2>新規ユーザー登録</h2>

    <div id="previews"></div>
<%= form_with model: @user, id: 'user_form', url: user_registration_path  do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <div class="image_field">
    <%= f.label :user_image, "画像" %>
    <%= f.file_field :user_image,  accept:'user_image/*' %>
  </div>

  <div class="field">
     <%= f.label :name,"ニックネーム(後から変更可能)" %><br />
     <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
     <%= f.label :introduction,"自己紹介(空欄でもOK,後から変更可能)" %><br />
     <%= f.text_area :introduction, autocomplete: "introduction" %>
  </div>

  <div class="field">
    <%= f.label :email,"メールアドレス" %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password,"パスワード" %>
    <% if @minimum_password_length %>
    <em>(英数字<%= @minimum_password_length %> 字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation,"パスワード(再確認)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "登録してログイン" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
