<div class="text-center text-danger"><%= flash[:error] %></div>

<h2 class="pb-3">ログイン</h2>

<div class="col-lg-9 offset-lg-1 py-3">
  <h4 class="px-3" style="background-color:#eee; width:fit-content;">登録済みの方はこちらからログイン</h4>
</div>
<%= form_with model: @user, url: user_session_path do |f| %>

  <div class="row py-3 text-center">
    <div class="col-sm-4 offset-sm-1">
      <%= f.label :email, "メールアドレス", class: "w-100" %><br />
    </div>
    <div class="col-sm-5">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-100" %>
    </div>
  </div>

  <div class="row py-3 text-center">
    <div class="col-sm-4 offset-sm-1">
      <%= f.label :password, "パスワード", class: "w-100" %><br />
    </div>
    <div class="col-sm-5">
      <%= f.password_field :password, autocomplete: "current-password", class: "w-100" %>
    </div>
  </div>

  <div class="row py-3">
    <div class="col text-center">
      <%= f.submit "ログイン", class:"btn btn-primary px-5 mt-3 mb-5" %>
    </div>
  </div>
<% end %>

<div class="col-lg-9 offset-lg-1 py-2">
    <h5 class="px-3" style="background-color:#eee; width:fit-content;">登録がお済みでない方</h5>
　</div>
<div class="col-lg-6 offset-lg-2 pl-3">
    <%= link_to "こちら", new_registration_path(resource_name) %>　から新規登録を行ってください。
</div>

