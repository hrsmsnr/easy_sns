<div>新規投稿ページ</div>


<%= form_with model: @post, id: 'post_preview' do |f| %>
  <%= render "public/shared/error_messages", resource: @post %>
  <div class="field">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title, autofocus: true %>
  </div>

  <div class="image_field">
    <div id="previews"></div>
    <%= f.label :post_image, "画像" %>
    <%= f.file_field :post_image, accept:'post_image/*' %>
  </div>

  <div class="field">
    <%= f.label :body, "内容" %><br />
    <%= f.text_area :body %>
  </div>

  <div class="field">
    <%= f.label :category, "カテゴリ" %><br />
    <%= f.select :category, Post.categories.keys.map { |c| [c, c] } %>
  </div>
  <%= f.submit "投稿内容を確定" %>
<% end %>