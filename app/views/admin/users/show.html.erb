<h1>[管理]<%= @user.name %>のページ</h1>
<div><%= @user.name %></div>
<div><%= @user.introduction %></div>
<div><%= @user.email %></div>
<div>フォロー:<%= @user.followers.count %>人</div>
<div>フォロワー:<%= @user.followeds.count %>人</div>
<div><%= @user.posts.count %></div>
<div>ステータス:
  <% if @user.is_active == true %>
    有効
  <% else %>
    退会済み
  <% end %>
</div>
<div>
  <%= form_with model: @user,url: admin_user_path(@user) do |f| %>
    <div>
      <%= f.radio_button :is_active, true, id: "active", class: "form-check-input" %>
      <%= f.label :is_active_true, "有効", class: "form-check-label", for: "active" %>
    </div>
    <div>
      <%= f.radio_button :is_active, false, id: "active", class: "form-check-input" %>
      <%= f.label :is_active_false, "退会", class: "form-check-label", for: "active" %>
    </div>
    <div>
      <%= f.submit "ステータス更新" %>
    </div>
  <% end %>
</div>

<% @posts.each do |post| %>
  <div class="flex-column border">
    <%= link_to admin_post_path(post.id) do %>
      <div>
        <%= post.title %>
      </div>
      <div>
        <%= image_tag post.get_post_image, size: '90x90' %>
        <%= post.body %>
      </div>
    <% end %>
  </div>
<% end %>